<Window x:Class="KinectMotionCapture.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ProgressWindow" Height="157" Width="382" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="52" />
            <RowDefinition Height="66*" />
        </Grid.RowDefinitions>
        <Button Content="Cancel" Grid.Row="1" Height="23" HorizontalAlignment="Right" Margin="0,0,12,12" Name="buttonCancel" VerticalAlignment="Bottom" Width="75" IsEnabled="False" Click="buttonCancel_Click" IsCancel="True" />
        <ProgressBar Grid.Row="1" Height="25" Name="progressBar" VerticalAlignment="Top" Margin="12,0" />
        <TextBlock Margin="12,6" Name="textBlockMessage" Text="Processing..." />
    </Grid>
</Window>
